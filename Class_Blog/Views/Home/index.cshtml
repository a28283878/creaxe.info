                left: 50%;
                transform: translateX(-50%);
                -o-transform: translateX(-50%);
                -webkit-transform: translateX(-50%);
                -moz-transform: translateX(-50%);
                width: 95%;
                padding: 15%;
            }

        .school-content {
            padding-bottom: 20px;
        }

        @@keyframes school-animate {
            from {
            }

            to {
                transform: scaleX(0) translateZ(0);
            }
        }

        @@media screen and (max-width: 767px) {
            .school-sign {
