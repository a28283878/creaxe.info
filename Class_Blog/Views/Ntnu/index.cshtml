            border-radius: 10px;
            -webkit-border-radius: 10px;
            -moz-border-radius: 10px;
            text-align: center;
            padding-top: 20px;
            box-shadow: 2px 4px 5px #444;
            -moz-box-shadow: 2px 4px 5px #444;
            -webkit-box-shadow: 2px 4px 5px #444;
        }

        .newsblock {
            background-color: rgba(237,237,237,0.6);
            border-radius: 10px;
            -webkit-border-radius: 10px;
            -moz-border-radius: 10px;
            box-shadow: 2px 4px 5px #444;
            overflow: hidden;
            min-height: 180px;
            margin: 20px auto;
        }

        .nopadding {
            padding: 0;
        }

        .tag {
            color: #EDEDED;
            background-color: #3E3E3E;
            padding: 5px;
            border-radius: 5px;
            -webkit-border-radius: 5px;
            -moz-border-radius: 5px;
        }

            .tag:after {
                background-color: #3E3E3E;
            }

        .btn {
            font-family: '微軟正黑體', 'Microsoft JhengHei';
            border-color: #3E3E3E;
            border-radius: 10px;
            -webkit-border-radius: 10px;
            -moz-border-radius: 10px;
            transition: all .2s;
            -webkit-transition: all .2s;
            -o-transition: all .2s;
            -moz-transition: all .2s;
            padding: 10px 15px;
            color: #3E3E3E;
            background-color: #EDEDED;
        }

            .btn:hover {
                color: white;
                background-color: #405559;
            }

        .animate_block {
            content: "";
            position: absolute;
            z-index: 10;
            top: 0;
            right: 0;
            left: auto;
            height: 100%;
            width: 100%;
            background-color: #EDEDED;
            animation: school-animate cubic-bezier(0, 0, 0, 0.95) 1.7s;
            -webkit-animation: school-animate cubic-bezier(0, 0, 0, 0.95) 1.7s;
            -o-animation: school-animate cubic-bezier(0, 0, 0, 0.95) 1.7s;
            -moz-animation: school-animate cubic-bezier(0, 0, 0, 0.95) 1.7s;
            animation-fill-mode: forwards;
            -webkit-animation-fill-mode: forwards;
            -o-animation-fill-mode: forwards;
            -moz-animation-fill-mode: forwards;
            transform-origin: left center;
            -webkit-transform-origin: left center;
            -o-transform-origin: left center;
            -moz-transform-origin: left center;
        }

        .img-hover {
            transition: all .4s ease-in-out;
        }

        .is-over h3, .is-over h4, .is-over h5 {
            color: #0085A1;
        }

        .is-over .img-hover {
            transform: scale(1.1);
        }

        .is-leave .img-hover {
            transform: scale(1);
        }

        .img-radius {
            border-radius: 10px 0px 0px 10px;
        }

        .animate_block-right {
            content: "";
            position: absolute;
            z-index: 10;
            top: 0;
            right: 0;
            left: auto;
            height: 100%;
            width: 100%;
            background-color: #EDEDED;
            animation: school-animate cubic-bezier(0, 0, 0, 0.95) 1.7s;
            -webkit-animation: school-animate cubic-bezier(0, 0, 0, 0.95) 1.7s;
            -o-animation: school-animate cubic-bezier(0, 0, 0, 0.95) 1.7s;
            -moz-animation: school-animate cubic-bezier(0, 0, 0, 0.95) 1.7s;
            animation-fill-mode: forwards;
            -webkit-animation-fill-mode: forwards;
            -o-animation-fill-mode: forwards;
            -moz-animation-fill-mode: forwards;
            transform-origin: right center;
            -webkit-transform-origin: right center;
            -o-transform-origin: right center;
            -moz-transform-origin: right center;
        }

        .text-shadow {
            color: whitesmoke;
            text-shadow: 4px 4px 10px black;
        }

        .school-block {
            background: #4E4E4E;
            border-radius: 5px;
            -moz-border-radius: 5px;
            -webkit-border-radius: 5px;
            box-shadow: 0 0 10px;
        }

            .school-block:before {
                background-color: #3E3E3E;
            }

        .school-sign {
            padding-top: 20px;
            padding-bottom: 20px;
            background-color: #EDEDED;
        }

        .school-sign-right {
            padding-top: 20px;
            padding-bottom: 20px;
            background-color: #EDEDED;
        }

            .school-sign > img, .school-sign-right > img {
                position: relative;
                left: 50%;
                transform: translateX(-50%);
                -o-transform: translateX(-50%);
                -webkit-transform: translateX(-50%);
                -moz-transform: translateX(-50%);
                width: 95%;
                padding: 15%;
            }

        .school-content {
            padding-bottom: 20px;
        }

        @@keyframes school-animate {
            from {
            }

            to {
                transform: scaleX(0) translateZ(0);
            }
        }

        @@media screen and (max-width: 767px) {
            .school-sign {
                padding-top: 20px;
                padding-bottom: 20px;
                border-radius: 5px;
                background-color: #EDEDED;
            }

            .school-block {
                padding-top: 10px;
                padding-bottom: 10px;
                background: #4E4E4E;
                border-radius: 5px;
                box-shadow: 0 0 10px;
            }

            .img-radius {
                border-radius: 10px 10px 0px 0px;
            }
            /*.innerblock {
