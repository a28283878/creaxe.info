            font-size: 17px;
            text-align: center;
            padding: 3px 10px;
            font-weight: 600;
            border-style: solid;
            border-color: #525252;
            border-radius: 15px;
            -webkit-border-radius: 15px;
            -moz-border-radius: 15px;
        }

        .navbar-inverse {
            background-color: #3E3E3E;
            border-bottom: 0px;
        }

        .block {
            padding: 15px;
        }

        .innerblock {
